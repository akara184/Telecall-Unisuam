//VERIFICAÇÃO AO CLICAR NO BUTTON ENTRAR
$("#redefinir").click(function () {
  var login = $("#login").val();
  var senha = $("#senha").val();
  var novaSenha = $("#novaSenha").val();
  var confirmeNovaSenha = $("#confirmeNovaSenha").val();

  if (login == "") {
    $("#login").focus();
    bulmaToast.toast({
      message: "Digite um login",
      type: "is-link",
      position: "bottom-center",
      pauseOnHover: true,
      dismissible: true,
      closeOnClick: true,
      opacity: 1,
    });
    return;
  } else if (senha == "") {
    $("#antigaSenha").focus();
    bulmaToast.toast({
      message: "Digite uma senha",
      type: "is-link",
      position: "bottom-center",
      pauseOnHover: true,
      dismissible: true,
      closeOnClick: true,
      opacity: 1,
    });
    return;
  } else if (!novaSenha.match(/^[a-zA-Z]{8}$/)) {
    $("#senha").focus();
    bulmaToast.toast({
      message: "O campo Senha deve ter 8 caracteres alfabéticos",
      type: "is-link",
      position: "center",
      pauseOnHover: true,
      dismissible: true,
      closeOnClick: true,
      opacity: 1,
    });
  } else if (!confirmeNovaSenha.match(/^[a-zA-Z]{8}$/)) {
    $("#senha").focus();
    bulmaToast.toast({
      message: "O campo Senha deve ter 8 caracteres alfabéticos",
      type: "is-link",  
      position: "center",
      pauseOnHover: true,
      dismissible: true,
      closeOnClick: true,
      opacity: 1,
    });
  }

  //LOCAL STORAGE

  if (
    login == localStorage.getItem("login") &&
    senha == localStorage.getItem("senha")
  ) {
    window.location = "../../views/main/index.php";
  } else {
    bulmaToast.toast({
      message: "Usuário inválido",
      type: "is-link",
      position: "bottom-center",
      pauseOnHover: true,
      dismissible: true,
      closeOnClick: true,
      opacity: 1,
    });
  }
});
